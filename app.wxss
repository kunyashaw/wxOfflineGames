page {
  background-color: #f5f6fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 16px;
  color: #2c3e50;
}

.container {
  padding: 20px;
}

.card {
  background: #ffffff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.btn {
  background: #3498db;
  color: #ffffff;
  border-radius: 8px;
  padding: 12px 24px;
  text-align: center;
  font-size: 16px;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}
