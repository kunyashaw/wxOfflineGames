<view class="container">
  <view class="profile-header">
    <view class="avatar">🎮</view>
    <text class="username">游戏玩家</text>
  </view>
  
  <view class="section">
    <view class="section-title">我的收藏</view>
    <view class="favorites-list" wx:if="{{favorites.length > 0}}">
      <view class="fav-item" wx:for="{{favorites}}" wx:key="*this">
        {{item}}
      </view>
    </view>
    <view class="empty" wx:else>暂无收藏</view>
  </view>
  
  <view class="section">
    <view class="section-title">积分排行</view>
    <view class="score-list" wx:if="{{scores.length > 0}}">
      <view class="score-item" wx:for="{{scores}}" wx:key="game">
        <text class="game-name">{{item.game}}</text>
        <text class="score-value">{{item.score}}</text>
      </view>
    </view>
    <view class="empty" wx:else>暂无记录</view>
  </view>
  
  <view class="section">
    <view class="section-title">设置</view>
    <view class="setting-item">
      <text>音效</text>
      <switch checked="{{settings.sound}}" bindchange="toggleSound"/>
    </view>
    <view class="setting-item">
      <text>音乐</text>
      <switch checked="{{settings.music}}" bindchange="toggleMusic"/>
    </view>
  </view>
</view>
