.header {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.back-btn {
  color: #3498db;
  font-size: 16px;
  padding: 10px;
}

.category-title {
  font-size: 24px;
  font-weight: bold;
  margin-left: 10px;
}

.game-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.game-card {
  width: 48%;
  background: #ffffff;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.game-cover {
  height: 100px;
  background: linear-gradient(135deg, #3498db, #2ecc71);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40px;
}

.game-name {
  padding: 12px;
  font-size: 16px;
  font-weight: 600;
  color: #2c3e50;
  display: block;
}

.difficulty {
  padding: 4px 12px;
  font-size: 12px;
  border-radius: 4px;
  display: inline-block;
  margin: 0 12px 12px;
}

.difficulty-low { background: #2ecc71; color: white; }
.difficulty-mid { background: #f39c12; color: white; }
.difficulty-high { background: #e74c3c; color: white; }
