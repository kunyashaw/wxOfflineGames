.header {
  text-align: center;
  padding: 30px 0;
}

.title {
  font-size: 28px;
  font-weight: bold;
  color: #2c3e50;
  display: block;
}

.subtitle {
  font-size: 14px;
  color: #7f8c8d;
  margin-top: 8px;
  display: block;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px;
}

.category-card {
  width: 48%;
  background: #ffffff;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  text-align: center;
  box-sizing: border-box;
}

.category-icon {
  font-size: 40px;
  display: block;
  margin-bottom: 10px;
}

.category-name {
  font-size: 18px;
  font-weight: 600;
  color: #2c3e50;
  display: block;
}

.category-count {
  font-size: 12px;
  color: #7f8c8d;
  margin-top: 4px;
  display: block;
}

.category-card:active {
  background: #f0f0f0;
}
